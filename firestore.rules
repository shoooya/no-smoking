rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ユーザーは自分のドキュメントのみ読み書き可能
    // シェアが有効な場合は誰でも読み取り可能
    match /users/{userId} {
      // 書き込みは本人のみ
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;

      // 個別ドキュメント取得（get）
      allow get: if request.auth != null && request.auth.uid == userId;
      allow get: if resource.data.sharingEnabled == true;

      // クエリ（list）- 未ログインユーザーでも実行可能
      // 実際に読み取れるのは sharingEnabled == true のドキュメントのみ
      allow list: if true;
    }

    // その他のドキュメントへのアクセスを拒否
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
